{{ include('layouts/header.twig', {title:'Liste des Livres'}) }}

<h1>Liste des Livres</h1>
<table>
    <thead>
        <tr>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Cat√©gorie</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for livre in livres %}
        <tr>
            <td>{{ livre.titre }}</td>
            <td>{{ livre.auteur }}</td>
            <td>
                {% for categorie in categories %}
                    {% if livre.categorie_id == categorie.id %}
                        {{ categorie.nom }}
                    {% endif %}
                {% endfor %}
            </td>
            <td>
                <a href="{{ base }}/livre/show/{{ livre.id }}">Voir</a>
                <a href="{{ base }}/livre/edit/{{ livre.id }}">Modifier</a>
                <form action="{{ base }}/livre/delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="{{ livre.id }}">
                    <input type="submit" value="Supprimer">
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ base }}/livre/create">Ajouter un Livre</a>

